    "drizzle:migrate": "drizzle-kit migrate --config drizzle.config.cjs"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.44.4",
    "postgres": "^3.4.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "drizzle-kit": "^0.31.4",
    "typescript": "^5.9.2",
    "vitest": "^2.1.8"
  }
}
